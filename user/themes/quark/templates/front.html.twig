{% extends 'partials/base.html.twig' %}

  {% block content %}
    <div id="front-banner">
        <h1 class="front-banner-text">{{site.title}}</h1>
        <h2 class="front-banner-text">{{site.author.name}}</h2>
    </div>
      {{ page.content|raw }}

      {# Draw the site pages #}
      <div class="container front-site-pages">
        <div class="columns">
          {# from the grav documentation, still don't understand it particularly well #}
          {% for p in page.find('/documentation-new').children if p != page %}
            <div class="column col-2 hide-xs">
               <img class="font-icons" src="{{theme_url}}/images/{{p.header.icon}}.svg">
            </div>
            <div class="column col-10 content-space">
              <a href="{{p.url}}"><h2>{{ p.title }}</h2>
              <p>{{ p.header.hook }}</p></a>
            </div>
          {% endfor %}
        </div>
      </div>
  {% endblock %}
